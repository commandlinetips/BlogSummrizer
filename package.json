{
  "name": "article-extractor",
  "version": "0.1.0",
  "description": "Extract and summarize paywalled articles using browser automation and local Ollama",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "npm run build && node dist/cli/index.js",
    "start": "node dist/cli/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "check-ollama": "node dist/utils/check-ollama.js",
    "extract": "npm run build && node dist/cli/index.js extract",
    "batch": "npm run build && node dist/cli/index.js batch"
  },
  "keywords": [
    "article",
    "extractor",
    "summarizer",
    "paywall",
    "ollama"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "dotenv": "^16.4.0",
    "gray-matter": "^4.0.3",
    "jsdom": "^27.2.0",
    "lodash": "^4.17.21",
    "node-fetch": "^3.3.2",
    "ora": "^8.0.0",
    "puppeteer": "^22.0.0",
    "sharp": "^0.33.0",
    "tough-cookie": "^4.1.3",
    "turndown": "^7.1.3",
    "winston": "^3.18.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^20.10.0",
    "@types/puppeteer": "^7.0.4",
    "@types/turndown": "^5.0.6",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.0"
  }
}
