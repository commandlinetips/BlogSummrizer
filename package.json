{
  "name": "article-extractor",
  "version": "0.1.0",
  "description": "Extract and summarize paywalled articles using browser automation and local Ollama",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "check-ollama": "ts-node src/utils/check-ollama.ts",
    "extract": "ts-node src/cli/index.ts extract",
    "batch": "ts-node src/cli/index.ts batch"
  },
  "keywords": [
    "article",
    "extractor",
    "summarizer",
    "paywall",
    "ollama"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "puppeteer": "^22.0.0",
    "axios": "^1.7.0",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.0",
    "turndown": "^7.1.3",
    "gray-matter": "^4.0.3",
    "sharp": "^0.33.0",
    "dotenv": "^16.4.0",
    "zod": "^3.22.0",
    "lodash": "^4.17.21",
    "tough-cookie": "^4.1.3",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0",
    "@types/puppeteer": "^7.0.4",
    "@types/jest": "^29.5.0",
    "ts-node": "^10.9.0",
    "tsconfig-paths": "^4.2.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0"
  }
}
